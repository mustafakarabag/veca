<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ee492.vecaapp.veca.SetEventActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/presence_audio_online"
        android:id="@+id/mic2ButtonActive"
        android:background="@android:color/transparent"
        android:scaleX="5"
        android:scaleY="5"
        android:visibility="invisible"
        android:translationZ="2dp"
        android:layout_alignTop="@+id/mic2Button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/presence_audio_busy"
        android:id="@+id/mic2Button"
        android:background="@android:color/transparent"
        android:scaleX="5"
        android:scaleY="5"
        android:onClick="buttonMic2"
        android:translationZ="2dp"
        android:layout_alignLeft="@+id/mic2ButtonActive"
        android:layout_alignStart="@+id/mic2ButtonActive"
        android:layout_centerVertical="false"
        android:layout_above="@+id/backButton" />


    <Button
        android:text="Geri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps = "false"
        android:background="?android:attr/colorEdgeEffect" />

    <TextView
        android:text="Yaver:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systemLabel"
        android:layout_marginTop="23dp"
        android:editable="false"
        android:enabled="true"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/userLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Siz:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLabel"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userResponseTextLabel1"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/systemResponseTextLabel1"
        android:layout_alignStart="@+id/systemResponseTextLabel1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systemResponseTextLabel1"
        android:editable="false"
        android:layout_toRightOf="@+id/systemLabel"
        android:layout_toEndOf="@+id/systemLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/systemLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Saat"
        android:ems="10"
        android:id="@+id/timeText"
        android:editable="false"
        android:layout_below="@+id/dateText"
        android:layout_alignLeft="@+id/dateText"
        android:layout_alignStart="@+id/dateText"
        android:backgroundTint="@android:color/darker_gray"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Başlık"
        android:ems="10"
        android:id="@+id/titleText"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/systemLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:backgroundTint="@android:color/darker_gray"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Tarih"
        android:ems="10"
        android:id="@+id/dateText"
        android:editable="false"
        android:layout_below="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/darker_gray"/>

    <ToggleButton
        android:text="tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeToggle"
        android:textOff="Etkinlik"
        android:textOn="Hatırlatıcı"
        android:textAllCaps = "false"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/existingEvents"
        android:minHeight="150sp"
        android:minLines="3"
        android:minWidth="250sp"
        android:maxHeight="150sp"
        android:maxWidth="250sp"
        android:textSize="16sp"
        android:maxLines = "50"
        android:scrollbars = "vertical"
        android:layout_below="@+id/timeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
